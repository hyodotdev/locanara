{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "ğŸ Open Example App in Xcode",
            "command": "open Example/LocanaraExample.xcodeproj",
            "cwd": "${workspaceFolder}/packages/apple"
        },
        {
            "name": "ğŸ¤– Open Gemini (Android) in Android Studio",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "bash",
            "runtimeArgs": [
                "-lc",
                "./scripts/open-android-studio.sh"
            ],
            "cwd": "${workspaceFolder}/packages/android",
            "console": "integratedTerminal"
        },
        {
            "type": "node-terminal",
            "request": "launch",
            "name": "ğŸ“ GQL: Generate Types",
