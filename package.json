{
  "name": "locanara",
  "private": true,
  "version": "1.0.1",
  "description": "Locanara - On-Device Intelligence SDK for Mobile Apps",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "packages/site/**/*.{ts,tsx}": [
      "bash -c 'cd packages/site && bun run typecheck'",
      "bunx prettier --write"
    ],
    "packages/site/**/*.{js,jsx,css,json,md,html}": [
      "bunx prettier --write"
    ],
    "packages/gql/**/*.{ts,graphql}": [
      "bunx prettier --write"
    ],
    "*.{md,json}": [
      "bunx prettier --write"
    ]
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "bun run --filter '*' test",
    "lint": "bun run --filter '*' lint",
    "clean": "rm -rf packages/*/node_modules node_modules",
    "generate": "cd packages/gql && bun run generate",
    "version:sync": "bun scripts/sync-versions.mjs",
    "version:bump": "bun scripts/bump-version.mjs",
    "site": "bun run --cwd packages/site",
    "site:install": "cd packages/site && bun install",
    "site:dev": "bun run --cwd packages/site dev",
    "site:build": "bun run --cwd packages/site build",
    "gql": "bun run --cwd packages/gql",
    "gql:generate": "bun run --cwd packages/gql generate",
    "knowledge": "bun run --cwd scripts/agent compile",
    "knowledge:install": "cd scripts/agent && bun install",
    "prepare": "husky && bun run knowledge:install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.1.0"
}
